/* pages/search/search.wxss */
.search-input {
  position: relative;
  width: 100%;
  height: 80rpx;
  margin: 0;
  background: #42bd56;
}

.search-input input {
  float: left;
  margin: 0 15rpx;
  background: #fff;
  border-radius: 10rpx;
  padding-left:50rpx;
  font-size:26rpx;
  height:55rpx;
  width:590rpx;
  position: relative;
  top: 10rpx;
}

.search-input .cancel {
  font-size:26rpx;
  color:#fff;
  position: relative;
  top: 5rpx;
}

.search-tip .tip-title {
  height: 80rpx;
  background: #f9f9f9;
  line-height: 80rpx;
  padding: 0 40rpx;
  font-size: 26rpx;
  color: #9e9e9e;
}

.tip-title .clear {
  float: right;
}

.tip-content-list {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  padding: 0 40rpx;
  border-bottom: 1px solid #ededed;
}