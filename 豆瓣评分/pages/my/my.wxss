/* pages/my/my.wxss */
.container {
  background: #42bd56;
  text-align: center;
  padding-bottom:40rpx
}

.btn-box {
  overflow: auto;
}

.btn-login {
  float:right;
  width:130rpx;
  border:1px solid #fff;
  padding:0;
  font-size:26rpx;
  margin-right:30rpx;
  margin-top:30rpx;
  color:#fff;
  background:#42bd56;
}

.picture {
  margin: 20rpx auto;
}

.picture image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.login-status {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
}